<Window x:Class="Shavaleev41size.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shavaleev41size"
        mc:Ignorable="d"
        Title="41 размер" Height="450" Width="800" FontFamily="Comic Sans MS" Icon="img/icon.ico" Background="#FFFFCC99">
    <!--Background="#FFCC6600"-->


    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="/img/logo.png" HorizontalAlignment="Left" Margin="10" />
        <TextBlock Text="41 размер" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Frame NavigationUIVisibility="Hidden" Background="White" Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered">
        </Frame>
        <Button Name="Return" Content="Назад" HorizontalAlignment="Right" Click="Return_Click"></Button>
    </Grid>
</Window>